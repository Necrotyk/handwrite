<div id="settings_handcode">
    <form class="form-horizontal">
        <div class="control-group">
            <label class="control-label">HandCode URL</label>
            <div class="controls">
                <input type="text" data-bind="value: settings.plugins.handcode.handcode_url">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Z Up (Travel)</label>
            <div class="controls">
                <input type="number" data-bind="value: settings.plugins.handcode.z_up">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Z Down (Writing)</label>
            <div class="controls">
                <input type="number" data-bind="value: settings.plugins.handcode.z_down">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Bed Width (mm)</label>
            <div class="controls">
                <input type="number" data-bind="value: settings.plugins.handcode.bed_width">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Bed Depth (mm)</label>
            <div class="controls">
                <input type="number" data-bind="value: settings.plugins.handcode.bed_depth">
            </div>
        </div>
    </form>
</div>
